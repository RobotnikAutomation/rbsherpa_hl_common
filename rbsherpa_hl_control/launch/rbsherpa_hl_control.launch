<?xml version="1.0"?>
<launch>

    <arg name="prefix" default="rbsherpa_hl_"/>
    <arg name="omni_mode" default="true" />
    
    <rosparam file="$(find rbsherpa_hl_control)/config/rbsherpa_hl_control.yaml" command="load"/>
      <param name="base_controller/steer/back_left/joint_name" value="$(arg prefix)back_left_steer_wheel_joint"/>
      <param name="base_controller/steer/back_right/joint_name" value="$(arg prefix)back_right_steer_wheel_joint"/>
      <param name="base_controller/steer/front_right/joint_name" value="$(arg prefix)front_right_steer_wheel_joint"/>
      <param name="base_controller/steer/front_left/joint_name" value="$(arg prefix)front_left_steer_wheel_joint"/>
      <param name="base_controller/traction/back_left/joint_name" value="$(arg prefix)back_left_traction_wheel_joint"/>
      <param name="base_controller/traction/back_right/joint_name" value="$(arg prefix)back_right_traction_wheel_joint"/>
      <param name="base_controller/traction/front_right/joint_name" value="$(arg prefix)front_right_traction_wheel_joint"/>
      <param name="base_controller/traction/front_left/joint_name" value="$(arg prefix)front_left_traction_wheel_joint"/>

      <param name="base_controller/odom_frame" value="$(arg prefix)odom"/>
      <param name="base_controller/robot_base_frame" value="$(arg prefix)base_footprint"/>

    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
      <remap from="/joint_states" to="joint_states" />
    </node>

    <node name="base_controller_spawner" pkg="controller_manager" type="controller_manager" args="spawn base_controller" respawn="false" output="screen" />

    <node name="base_joint_read_state_spawner" pkg="controller_manager" type="controller_manager" args="spawn joint_read_state_controller" respawn="false" output="screen"/>

</launch>
