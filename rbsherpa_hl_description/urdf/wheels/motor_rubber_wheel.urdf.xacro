<?xml version="1.0"?>
<robot name="motor_wheel" xmlns:xacro="http://www.ros.org/wiki/xacro">
	
  <xacro:include filename="$(find rbsherpa_hl_description)/urdf/wheels/motor_rubber_wheel.transmission.xacro"/>
  <xacro:include filename="$(find rbsherpa_hl_description)/urdf/wheels/motor_rubber_wheel.gazebo.xacro"/>

  <xacro:property name="M_PI" value="3.1415926535897931" />

  <xacro:macro name="motor_rubber_wheel" params="prefix parent *origin reflect hq">

    <joint name="${prefix}_wheel_joint" type="continuous">
      <parent link="${parent}"/>
      <child link="${prefix}_wheel_link"/>
      <xacro:insert_block name="origin" />
      <axis xyz="0 1 0" rpy="0 0 0" />
      <limit effort="100" velocity="100"/>
      <joint_properties damping="0.0" friction="0.0"/>
    </joint>

    <link name="${prefix}_wheel_link">
      <visual>
        <!-- HIGH RESOLUTION WHEELS -->
        <xacro:if value="${hq}">
          <origin xyz="0 0 0" rpy="0 0 0" />
          <geometry>
			<xacro:if value="${reflect}">
			 <mesh filename="package://rbsherpa_hl_description/meshes/wheels/rbsherpa_hl_motorwheel.dae" />
			</xacro:if>
			<xacro:unless value="${reflect}">
			 <mesh filename="package://rbsherpa_hl_description/meshes/wheels/rbsherpa_hl_motorwheel.dae" />
			</xacro:unless>
          </geometry>
        </xacro:if>
       <!-- LOW RESOLUTION WHEELS -->
        <xacro:unless value="${hq}">
          <origin xyz="0 0 0" rpy="${M_PI/2} 0 0" />
          <geometry>
            <cylinder length="${wheel_height}" radius="${wheel_radius}" />
          </geometry>
        </xacro:unless>
      </visual>

      <collision>
		<origin xyz="0 0 0" rpy="${M_PI/2} 0 0" />
        <geometry>
          <cylinder length="${wheel_height}" radius="${wheel_radius}" />
        </geometry>
      </collision>
      <inertial>
        <mass value="37.29668" />
        <origin xyz="0.00122 -0.00633 0.07032" />
        <inertia  ixx="0.656095" ixy = "0.0002884484" ixz = "0.0037546231"
                  iyy="0.645381" iyz = "0.06221658"
                  izz="0.160381" />
      </inertial>
    </link>
    
    <xacro:motor_rubber_wheel_transmission prefix="${prefix}" />
	<xacro:motor_rubber_wheel_gazebo prefix="${prefix}" />
    
  </xacro:macro>

</robot>
