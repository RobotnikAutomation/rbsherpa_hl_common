<?xml version="1.0"?>
<launch>

    <arg name="prefix" default="rbsherpa_hl_"/>

    <rosparam file="$(find rbsherpa_hl_control)/config/rbsherpa_hl_control.yaml" command="load"/>
      <param name="omni_drive_controller/joint/back_left_wheel_joint/name" value="$(arg prefix)back_left_wheel_joint"/>
      <param name="omni_drive_controller/joint/back_right_wheel_joint/name" value="$(arg prefix)back_right_wheel_joint"/>
      <param name="omni_drive_controller/joint/front_right_wheel_joint/name" value="$(arg prefix)front_right_wheel_joint"/>
      <param name="omni_drive_controller/joint/front_left_wheel_joint/name" value="$(arg prefix)front_left_wheel_joint"/>
      <param name="omni_drive_controller/joint/back_left_motor_wheel_joint/name" value="$(arg prefix)back_left_motor_wheel_joint"/>
      <param name="omni_drive_controller/joint/back_right_motor_wheel_joint/name" value="$(arg prefix)back_right_motor_wheel_joint"/>
      <param name="omni_drive_controller/joint/front_right_motor_wheel_joint/name" value="$(arg prefix)front_right_motor_wheel_joint"/>
      <param name="omni_drive_controller/joint/front_left_motor_wheel_joint/name" value="$(arg prefix)front_left_motor_wheel_joint"/>
      <param name="omni_drive_controller/odom_frame" value="$(arg prefix)odom"/>
      <param name="omni_drive_controller/robot_base_frame" value="$(arg prefix)base_footprint"/>

    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
			<remap from="/joint_states" to="joint_states" />
		</node>

    <node name="base_omni_spawner" pkg="controller_manager" type="controller_manager" args="spawn omni_drive_controller" respawn="false" output="screen" />

    <node name="base_joint_read_state_spawner" pkg="controller_manager" type="controller_manager" args="spawn joint_read_state_controller" respawn="false" output="screen"/>

</launch>
