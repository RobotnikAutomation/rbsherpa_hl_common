<?xml version="1.0"?>
<robot name="motor_wheel" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find rbsherpa_hl_description)/urdf/wheels/motor_wheel.transmission.xacro"/>

  <xacro:property name="M_PI" value="3.1415926535897931" />
  <xacro:property name="wheel_joint_damping" value="2.0" />
  <xacro:property name="wheel_joint_friction" value="1.0" />
	<xacro:property name="wheel_radius" value="0.18415" />
	<xacro:property name="wheel_height" value="0.14" />

  <xacro:macro name="motor_wheel" params="prefix parent *origin hq">

	  <joint name="${prefix}_wheel_joint" type="continuous">
	    <parent link="${parent}"/>
	    <child link="${prefix}_wheel_link"/>
	    <xacro:insert_block name="origin" />
	    <axis xyz="0 1 0" rpy="0 0 0" />
	    <limit effort="100" velocity="100"/>
	    <joint_properties damping="${wheel_joint_damping}" friction="${wheel_joint_friction}"/>
	  </joint>

	  <link name="${prefix}_wheel_link">
	    <visual>
				<xacro:if value="${hq}">
		      <origin xyz="0 0 0" rpy="0 0 0" />
		      <geometry>
						<mesh filename="package://rbsherpa_hl_description/meshes/wheels/rbsherpa_hl_motorwheel.dae" />
		      </geometry>
				</xacro:if>
				<xacro:unless value="${hq}">
					<origin xyz="0 0 0" rpy="${M_PI/2} 0 0" />
					<geometry>
						<cylinder length="${wheel_height}" radius="${wheel_radius}" />
					</geometry>
				</xacro:unless>
	    </visual>

	    <collision>
				<origin xyz="0 0 0" rpy="${M_PI/2} 0 0" />
	      <geometry>
	        <cylinder length="${wheel_height}" radius="${wheel_radius}" />
	      </geometry>
	    </collision>

	    <inertial>
	      <mass value="6.91837" />
	      <origin xyz="0 0.00036 0" />
	      <inertia  ixx="0.06952851" ixy = "0" ixz = "0"
	                iyy="0.12393" iyz = "0"
	                izz="0.0695285" />
	    </inertial>

	  </link>

	  <xacro:motor_wheel_transmission prefix="${prefix}" />

  </xacro:macro>

</robot>
