<?xml version="1.0"?>
<robot name="steer_wheel" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find rbsherpa_hl_description)/urdf/wheels/steer_wheel.transmission.xacro"/>

  <xacro:property name="M_PI" value="3.1415926535897931" />
  <xacro:property name="steer_joint_damping" value="0.01" />
  <xacro:property name="steer_joint_friction" value="0.01" />
  <xacro:property name="steer_joint_position_limit" value="2.9" />

  <xacro:macro name="steer_wheel" params="prefix parent *origin">

    <joint name="${prefix}_wheel_joint" type="revolute">
      <parent link="${parent}"/>
      <child link="${prefix}_wheel_link"/>
      <xacro:insert_block name="origin" />
      <axis xyz="0 0 1" rpy="0 0 0" />
      <limit effort="100" velocity="50" lower="-${steer_joint_position_limit}" upper="${steer_joint_position_limit}"/>
      <joint_properties damping="${steer_joint_damping}" friction="${steer_joint_friction}"/>
    </joint>

    <link name="${prefix}_wheel_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
  			  <mesh filename="package://rbsherpa_hl_description/meshes/wheels/rbsherpa_hl_wheel.dae" />
        </geometry>
      </visual>

      <collision>
		    <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
			    <cylinder length="0.1" radius="0.1" />
        </geometry>
      </collision>

      <inertial>
        <mass value="32.81532" />
        <origin xyz="0.00002 -0.06358 -0.18084" />
        <inertia  ixx="0.469495" ixy = "0.0001387555" ixz = "0.00006456469"
                  iyy="0.496194" iyz = "0.01288985"
                  izz="0.263583" />
      </inertial>

    </link>

    <xacro:steer_wheel_transmission prefix="${prefix}" />

  </xacro:macro>

</robot>
